---
import '../styles/global.css';
import { generateMetaKeywords, generateLocalBusinessSchema } from '../lib/seo';
import SpeedInsights from '@vercel/speed-insights/astro';
import Analytics from '@vercel/analytics/astro';

interface Props {
  title: string;
  description?: string;
  image?: string;
  noIndex?: boolean;
  keywords?: string;
  category?: string;
  structuredData?: any;
  pageType?: string;
}

const { 
  title, 
  description = 'Order delicious food from the best restaurants in Aurangabad. Fast delivery, great prices, and amazing taste!',
  image = '/images/logo.png',
  noIndex = false,
  keywords,
  category,
  structuredData,
  pageType
} = Astro.props;

// Force canonical URL to use production domain
const PRODUCTION_URL = 'https://khazaana.co.in';
const canonicalURL = new URL(Astro.url.pathname, PRODUCTION_URL);
const fullTitle = title; // Title already includes branding from SEO functions
const ogImage = new URL(image, PRODUCTION_URL).toString();
const metaKeywords = keywords || generateMetaKeywords(category);
const localBusinessSchema = generateLocalBusinessSchema();
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  
  <!-- Favicons -->
  <link rel="icon" type="image/x-icon" href="/favicon.ico">
  <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
  <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
  <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
  <link rel="icon" type="image/png" sizes="192x192" href="/android-chrome-192x192.png">
  <link rel="icon" type="image/png" sizes="512x512" href="/android-chrome-512x512.png">
  
  <meta name="generator" content={Astro.generator}>
  
  <!-- Primary Meta Tags -->
  <title>{fullTitle}</title>
  <meta name="title" content={fullTitle}>
  <meta name="description" content={description}>
  <meta name="keywords" content={metaKeywords}>
  <link rel="canonical" href={canonicalURL}>
  
  <!-- Location & Business Meta Tags -->
  <meta name="geo.region" content="IN-WB">
  <meta name="geo.placename" content="Aurangabad, Suti, West Bengal">
  <meta name="geo.position" content="24.75;88.2">
  <meta name="ICBM" content="24.75, 88.2">
  
  <!-- Business Information -->
  <meta name="author" content="Khazaana Food Ordering Platform">
  <meta name="contact" content="+91-8695902696">
  <meta name="coverage" content="Aurangabad, Suti, Murshidabad, West Bengal">
  <meta name="distribution" content="global">
  <meta name="rating" content="general">
  <meta name="revisit-after" content="1 days">
  
  {noIndex ? <meta name="robots" content="noindex, nofollow"> : <meta name="robots" content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1">}
  
  <!-- Open Graph / Facebook (Enhanced for Meta Ads) -->
  <meta property="og:type" content="website">
  <meta property="og:url" content={canonicalURL}>
  <meta property="og:title" content={fullTitle}>
  <meta property="og:description" content={description}>
  <meta property="og:image" content={ogImage}>
  <meta property="og:image:width" content="1200">
  <meta property="og:image:height" content="630">
  <meta property="og:image:alt" content="Khazaana Food Delivery - Order food online in Aurangabad">
  <meta property="og:locale" content="en_IN">
  <meta property="og:site_name" content="Khazaana">
  <meta property="fb:app_id" content="YOUR_FB_APP_ID">
  
  <!-- Twitter -->
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:url" content={canonicalURL}>
  <meta name="twitter:title" content={fullTitle}>
  <meta name="twitter:description" content={description}>
  <meta name="twitter:image" content={ogImage}>
  <meta name="twitter:image:alt" content="Khazaana Food Delivery - Order food online in Aurangabad">
  <meta name="twitter:site" content="@khazaana_food">
  <meta name="twitter:creator" content="@khazaana_food">
  
  <!-- PWA Meta Tags -->
  <meta name="theme-color" content="#FF6B35">
  <meta name="apple-mobile-web-app-capable" content="yes">
  <meta name="apple-mobile-web-app-status-bar-style" content="default">
  <meta name="apple-mobile-web-app-title" content="Khazaana">
  <link rel="manifest" href="/manifest.json">
  
  <!-- Preconnect to important domains for performance -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link rel="preconnect" href="https://www.googletagmanager.com">
  <link rel="preconnect" href="https://connect.facebook.net">
  <link rel="dns-prefetch" href="https://www.google-analytics.com">
  <link rel="dns-prefetch" href="https://translate.google.com">
  
  <!-- Preload critical assets -->
  <link rel="preload" href="/images/logo.png" as="image">
  
  <!-- Google Analytics 4 (GA4) - Full Analytics Suite -->
  <script is:inline async src="https://www.googletagmanager.com/gtag/js?id=G-VSLCVT356G"></script>
  <script is:inline>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());
    
    // GA4 Configuration with Enhanced Measurement
    gtag('config', 'G-VSLCVT356G', {
      // Enhanced measurement (auto-tracks scrolls, outbound clicks, site search, video, file downloads)
      'send_page_view': true,
      
      // User engagement tracking
      'engagement_time_msec': 100,
      
      // Session settings
      'session_duration': 1800000, // 30 minutes
      
      // Debug mode (set to false in production after testing)
      'debug_mode': false,
      
      // Cookie settings
      'cookie_domain': 'khazaana.co.in',
      'cookie_expires': 63072000, // 2 years in seconds
      'cookie_prefix': '_khz',
      'cookie_update': true,
      
      // User properties for segmentation
      'custom_map': {
        'dimension1': 'user_type',
        'dimension2': 'restaurant_preference',
        'dimension3': 'order_frequency'
      }
    });
    
    // Track page timing for performance insights
    gtag('event', 'timing_complete', {
      'name': 'page_load',
      'value': Math.round(performance.now()),
      'event_category': 'Performance'
    });
  </script>
  
  <!-- Enhanced User Journey & Behavior Tracking -->
  <script is:inline>
    // Track scroll depth
    let scrollDepthTracked = { 25: false, 50: false, 75: false, 100: false };
    window.addEventListener('scroll', function() {
      const scrollPercent = Math.round((window.scrollY / (document.documentElement.scrollHeight - window.innerHeight)) * 100);
      [25, 50, 75, 100].forEach(function(depth) {
        if (scrollPercent >= depth && !scrollDepthTracked[depth]) {
          scrollDepthTracked[depth] = true;
          gtag('event', 'scroll_depth', {
            'event_category': 'Engagement',
            'event_label': depth + '%',
            'value': depth
          });
        }
      });
    });
    
    // Track time on page
    let timeOnPage = 0;
    setInterval(function() {
      timeOnPage += 10;
      if (timeOnPage === 30 || timeOnPage === 60 || timeOnPage === 120 || timeOnPage === 300) {
        gtag('event', 'time_on_page', {
          'event_category': 'Engagement',
          'event_label': timeOnPage + ' seconds',
          'value': timeOnPage
        });
      }
    }, 10000);
    
    // Track outbound link clicks
    document.addEventListener('click', function(e) {
      const link = e.target.closest('a');
      if (link && link.hostname !== window.location.hostname) {
        gtag('event', 'outbound_click', {
          'event_category': 'Outbound',
          'event_label': link.href,
          'transport_type': 'beacon'
        });
      }
    });
    
    // Track phone number clicks
    document.addEventListener('click', function(e) {
      const link = e.target.closest('a[href^="tel:"]');
      if (link) {
        gtag('event', 'phone_call', {
          'event_category': 'Contact',
          'event_label': link.href.replace('tel:', ''),
          'value': 1
        });
      }
    });
    
    // Track WhatsApp clicks
    document.addEventListener('click', function(e) {
      const link = e.target.closest('a[href*="wa.me"], a[href*="whatsapp"]');
      if (link) {
        gtag('event', 'whatsapp_click', {
          'event_category': 'Contact',
          'event_label': 'WhatsApp Order',
          'value': 1
        });
      }
    });
    
    // Track copy events (address, phone)
    document.addEventListener('copy', function() {
      gtag('event', 'copy_text', {
        'event_category': 'Engagement',
        'event_label': window.getSelection().toString().substring(0, 50)
      });
    });
    
    // Track visibility changes (tab switches)
    document.addEventListener('visibilitychange', function() {
      gtag('event', 'visibility_change', {
        'event_category': 'Engagement',
        'event_label': document.visibilityState
      });
    });
    
    // Track errors for debugging
    window.addEventListener('error', function(e) {
      gtag('event', 'javascript_error', {
        'event_category': 'Error',
        'event_label': e.message,
        'value': 1
      });
    });
  </script>
  
  <!-- Meta Pixel (Facebook Ads) -->
  <!-- Replace PIXEL_ID with your Meta Pixel ID when ready -->
  <script is:inline>
    !function(f,b,e,v,n,t,s)
    {if(f.fbq)return;n=f.fbq=function(){n.callMethod?
    n.callMethod.apply(n,arguments):n.queue.push(arguments)};
    if(!f._fbq)f._fbq=n;n.push=n;n.loaded=!0;n.version='2.0';
    n.queue=[];t=b.createElement(e);t.async=!0;
    t.src=v;s=b.getElementsByTagName(e)[0];
    s.parentNode.insertBefore(t,s)}(window, document,'script',
    'https://connect.facebook.net/en_US/fbevents.js');
    // fbq('init', 'PIXEL_ID'); // Uncomment and add your Pixel ID
    // fbq('track', 'PageView');
  </script>
  
  <!-- JSON-LD Structured Data -->
  <!-- Website Schema -->
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "WebSite",
    "name": "Khazaana",
    "description": description,
    "url": canonicalURL,
    "potentialAction": {
      "@type": "SearchAction",
      "target": `${Astro.site}restaurants?search={search_term_string}`,
      "query-input": "required name=search_term_string"
    }
  })} />
  
  <!-- Local Business Schema -->
  <script type="application/ld+json" set:html={JSON.stringify(localBusinessSchema)} />
  
  <!-- Organization Schema -->
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "Organization",
    "name": "Khazaana",
    "url": Astro.site?.toString() || "https://khazaana.co.in",
    "logo": `${Astro.site || "https://khazaana.co.in"}/images/logo.png`,
    "contactPoint": {
      "@type": "ContactPoint",
      "telephone": "+91-8695902696",
      "contactType": "customer service",
      "areaServed": "IN",
      "availableLanguage": ["English", "Bengali"]
    },
    "sameAs": [
      "https://www.instagram.com/_khazaana/"
    ]
  })} />
  
  {structuredData && <script type="application/ld+json" set:html={JSON.stringify(structuredData)} />}
  
  <!-- Slot for page-specific head content -->
  <slot name="head" />
</head>
<body class="min-h-screen bg-gray-50" data-page={pageType}>
  <!-- Google Tag Manager (noscript) -->
  <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-XXXXXXX" height="0" width="0" style="display:none;visibility:hidden" title="Google Tag Manager"></iframe></noscript>
  
  <slot />
  
  <!-- Developer Tools (Development Only) -->
  <div id="devtools-root"></div>
  
  <!-- JigsawStack Translation Widget -->
  <script src="https://cdn.jigsawstack.com/v1/translation-widget.js"></script>
  <script is:inline>
    // Define custom CSS for the translation widget
    const jigsawStackCustomCSS = `
      .jigsawstack-translation-widget {
        font-family: inherit !important;
        font-size: 12px !important;
        border: 2px solid #FF6B35 !important;
        border-radius: 6px !important;
        padding: 8px 12px !important;
        background: #FF6B35 !important;
        color: white !important;
        display: inline-flex !important;
        align-items: center !important;
        gap: 6px !important;
        cursor: pointer !important;
        transition: all 0.2s ease !important;
        white-space: nowrap !important;
        font-weight: 600 !important;
        z-index: 1000 !important;
        position: relative !important;
      }
      .jigsawstack-translation-widget:hover {
        border-color: #E85A2A !important;
        background: #E85A2A !important;
        transform: translateY(-1px) !important;
        box-shadow: 0 4px 8px rgba(255, 107, 53, 0.3) !important;
      }
      .jigsawstack-translation-widget .language-selector {
        color: white !important;
        font-size: 12px !important;
        font-weight: 600 !important;
      }
      .jigsawstack-translation-widget .flag-icon {
        width: 18px !important;
        height: 14px !important;
      }
      @media (max-width: 640px) {
        .jigsawstack-translation-widget {
          padding: 6px 10px !important;
          font-size: 11px !important;
          border-width: 1px !important;
        }
        .jigsawstack-translation-widget .language-selector {
          font-size: 11px !important;
        }
      }
    `;

    // Initialize JigsawStack Translation Widget for Desktop
    window.addEventListener('load', function() {
      try {
        // Desktop widget
        const desktopElement = document.getElementById('google_translate_element');
        if (desktopElement && window.TranslationWidget) {
          window.TranslationWidget('sk_40c22ac1529e5833cb3e3cffe81ba18596c815721db5b63b4d36b12ca1944d06c46277967738b3165bc2d7a841fd6f1f4be7c497ff4aa5d35e17f112910e69d0024N9Lu87BuDw9ZdziZJY', {
            pageLanguage: 'en',
            includedLanguages: ['en', 'bn'],
            position: 'inline',
            theme: {
              baseColor: '#FF6B35',
              textColor: '#000000',
              borderRadius: '6px'
            },
            showUI: true,
            autoDetectLanguage: false,
            customCSS: jigsawStackCustomCSS
          });
          console.log('‚úÖ JigsawStack Desktop Translation Widget initialized');
        }

        // Mobile widget (portal)
        const mobileElement = document.getElementById('mobile_translate_element');
        if (mobileElement && window.TranslationWidget) {
          window.TranslationWidget('sk_40c22ac1529e5833cb3e3cffe81ba18596c815721db5b63b4d36b12ca1944d06c46277967738b3165bc2d7a841fd6f1f4be7c497ff4aa5d35e17f112910e69d0024N9Lu87BuDw9ZdziZJY', {
            pageLanguage: 'en',
            includedLanguages: ['en', 'bn'],
            position: 'inline',
            theme: {
              baseColor: '#FF6B35',
              textColor: '#000000',
              borderRadius: '4px'
            },
            showUI: true,
            autoDetectLanguage: false,
            customCSS: jigsawStackCustomCSS.replace('padding: 8px 12px', 'padding: 4px 6px').replace('font-size: 12px', 'font-size: 11px')
          });
          console.log('‚úÖ JigsawStack Mobile Translation Widget initialized');
        }
      } catch (error) {
        console.error('‚ùå JigsawStack Translation Widget failed to initialize:', error);
        // Fallback: Show manual language toggle
        showManualLanguageToggle();
      }
    });

    function showManualLanguageToggle() {
      const desktopEl = document.getElementById('google_translate_element');
      const mobileEl = document.getElementById('mobile_translate_element');

      if (desktopEl && !desktopEl.hasChildNodes()) {
        desktopEl.innerHTML = '<button onclick="toggleManualLanguage()" class="inline-flex items-center gap-1 px-2 py-1 text-xs bg-orange-500 hover:bg-orange-600 text-white rounded border-0 transition-colors">üåê ‡¶¨‡¶æ‡¶Ç‡¶≤‡¶æ</button>';
      }
      if (mobileEl && !mobileEl.hasChildNodes()) {
        mobileEl.innerHTML = '<button onclick="toggleManualLanguage()" class="inline-flex items-center gap-1 px-1 py-0.5 text-[10px] bg-orange-500 hover:bg-orange-600 text-white rounded border-0 transition-colors">üåê ‡¶¨‡¶æ‡¶Ç‡¶≤‡¶æ</button>';
      }
    }

    function toggleManualLanguage() {
      // Simple manual toggle between EN and BN
      const currentLang = document.documentElement.lang || 'en';
      const newLang = currentLang === 'en' ? 'bn' : 'en';
      document.documentElement.lang = newLang;
      // Reload page with new language preference
      window.location.reload();
    }
  </script>
  
  <!-- Load Sentry SDK -->
  <script src="https://browser.sentry-cdn.com/7.91.0/bundle.min.js" crossorigin="anonymous"></script>
  
  <!-- Load LogRocket SDK -->
  <script src="https://cdn.lr-ingest.io/LogRocket.min.js" crossorigin="anonymous"></script>
  
  <!-- Initialize Monitoring System -->
  <script is:inline>
    // Wait for page to load completely
    window.addEventListener('load', function() {
      console.log('üîç Checking monitoring SDKs...');
      console.log('Sentry:', typeof window.Sentry !== 'undefined' ? '‚úÖ Loaded' : '‚ùå Not loaded');
      console.log('LogRocket:', typeof window.LogRocket !== 'undefined' ? '‚úÖ Loaded' : '‚ùå Not loaded');
      
      // Initialize Sentry
      if (window.Sentry) {
        try {
          window.Sentry.init({
            dsn: 'https://8eeb5a726529801ef43ed298c7b3a0b6@o4510453631156224.ingest.us.sentry.io/4510453644001280',
            environment: 'production',
            tracesSampleRate: 0.2,
          });
          console.log('‚úÖ Sentry initialized');
        } catch (e) {
          console.warn('‚ùå Sentry init failed:', e);
        }
      }
      
      // Initialize LogRocket
      if (window.LogRocket) {
        try {
          window.LogRocket.init('x6pnta/khazaana');
          console.log('‚úÖ LogRocket initialized');
        } catch (e) {
          console.warn('‚ùå LogRocket init failed:', e);
        }
      }
      
      // Make monitoring available globally
      window.Monitoring = {
        initialized: true,
        testSentryLogging: function() {
          if (window.Sentry) {
            window.Sentry.addBreadcrumb({
              message: 'User triggered test log',
              level: 'info',
              category: 'test'
            });
            console.log('‚úÖ Sentry test breadcrumb sent');
          }
        },
        sendTestEmail: function() {
          // Use image beacon to bypass CORS
          var data = {
            subject: 'Test Email - Monitoring System Working!',
            data: { 
              message: 'All monitoring systems are operational',
              sentry: window.Sentry ? 'Active' : 'Inactive',
              logrocket: window.LogRocket ? 'Active' : 'Inactive',
              timestamp: new Date().toISOString()
            },
            timestamp: new Date().toISOString(),
            url: window.location.href
          };
          
          // Create image beacon with data as query parameter
          var img = new Image();
          img.src = 'https://script.google.com/macros/s/AKfycbzpdOPZ5O0J1HKU7ptQuKhli4tocX-Nz5bK9k0RieV6PXo9rn1cmwOqS04svwsDxYvj/exec?data=' + encodeURIComponent(JSON.stringify(data));
          img.onload = function() {
            console.log('‚úÖ Test email sent via image beacon - check your inbox');
          };
          img.onerror = function() {
            console.log('‚úÖ Email request sent (image beacon) - check your inbox');
          };
        }
      };
      
      console.log('‚úÖ Monitoring system ready');
    });
  </script>
  
  <SpeedInsights />
  <Analytics />
</body>
</html>
