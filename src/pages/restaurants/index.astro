---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/common/Header.astro';
import Footer from '../../components/common/Footer.astro';
import { Search, Clock, MapPin, UtensilsCrossed, IndianRupee, Award, Filter, Percent, Tag, Truck } from 'lucide-react';
import { restaurants, isRestaurantOpen, getCountdownToOpen, getFormattedTimings } from '../../data/restaurants';
import { loadMenuFromCSV } from '../../lib/csv-loader';
import { generateSEOTitle, generateSEODescription, generateBreadcrumbSchema } from '../../lib/seo';
import { getActiveOffers, isExpiringSoon, getRemainingDays } from '../../data/offers';
import { buildRestaurantsListSchema } from '../../lib/buildRestaurantSchema';
import { LOCATION, SITE_CONFIG } from '../../lib/generateRestaurantMeta';

const activeOffers = getActiveOffers();

// Load all menus for search functionality
const restaurantMenus = await Promise.all(
  restaurants.map(async (restaurant) => ({
    id: restaurant.id,
    items: await loadMenuFromCSV(restaurant.menuFile)
  }))
);

// Enhanced SEO
const seoTitle = `Best Restaurants in ${LOCATION.city}, ${LOCATION.state} | Order Food Online | Khazaana`;
const seoDescription = `Discover ${restaurants.length} top-rated restaurants in ${LOCATION.locality}, ${LOCATION.city}. Order Biryani, Chinese, Cafe food online. Fast delivery near ${LOCATION.landmarks[0]}, ${LOCATION.landmarks[1]}. Best food in ${LOCATION.pincode}.`;
const seoKeywords = `restaurants ${LOCATION.city}, food delivery ${LOCATION.locality}, online food order ${LOCATION.state}, best restaurants near ${LOCATION.landmarks[0]}, ${LOCATION.pincode} restaurants, Khazaana food delivery`;

const breadcrumbSchema = generateBreadcrumbSchema([
  { name: 'Home', url: '/' },
  { name: 'Restaurants', url: '/restaurants' }
]);

// Restaurant list schema for rich snippets
const restaurantsListSchema = buildRestaurantsListSchema(restaurants);

// Combined schema
const combinedSchema = {
  '@context': 'https://schema.org',
  '@graph': [breadcrumbSchema, restaurantsListSchema]
};
---

<BaseLayout 
  title={seoTitle}
  description={seoDescription}
  keywords={seoKeywords}
  category="general"
  structuredData={combinedSchema}
>
  <Header />
  
  <main class="min-h-screen bg-gray-50">
    <!-- Page Header -->
    <section class="bg-white border-b border-gray-200 py-8">
      <div class="container-custom">
        <h1 class="text-3xl md:text-4xl font-bold mb-4">Restaurants</h1>
        <p class="text-gray-600">Discover amazing food from the best restaurants in Aurangabad</p>
      </div>
    </section>

    <!-- Filters and Search -->
    <section class="bg-white border-b border-gray-200 py-6 sticky top-16 z-30">
      <div class="container-custom">
        <!-- Search Bar -->
        <div class="mb-6">
          <div class="relative max-w-2xl">
            <Search className="absolute left-4 top-1/2 transform -translate-y-1/2 text-gray-400 w-5 h-5" />
            <input
              type="text"
              id="search-input"
              placeholder="Search restaurants or cuisines..."
              class="w-full pl-12 pr-4 py-3 rounded-lg border-2 border-gray-200 focus:border-[var(--color-primary)] focus:outline-none transition-colors"
            />
          </div>
        </div>

        <!-- Tabs and Filters -->
        <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
          <!-- Tabs -->
          <div class="flex space-x-2 overflow-x-auto pb-2 sm:pb-0">
            <button
              class="tab-btn active px-4 py-2 rounded-lg font-medium whitespace-nowrap transition-colors flex items-center space-x-2"
              data-tab="all"
            >
              <UtensilsCrossed className="w-4 h-4" />
              <span>All Restaurants</span>
            </button>
            <button
              class="tab-btn px-4 py-2 rounded-lg font-medium whitespace-nowrap transition-colors flex items-center space-x-2"
              data-tab="featured"
            >
              <Award className="w-4 h-4" />
              <span>Featured</span>
            </button>
            <button
              class="tab-btn px-4 py-2 rounded-lg font-medium whitespace-nowrap transition-colors flex items-center space-x-2"
              data-tab="open"
            >
              <Clock className="w-4 h-4" />
              <span>Open Now</span>
            </button>
            {activeOffers.length > 0 && (
              <button
                class="tab-btn px-4 py-2 rounded-lg font-medium whitespace-nowrap transition-colors flex items-center space-x-2 bg-gradient-to-r from-red-500 to-orange-500 text-white"
                data-tab="offers"
              >
                <Percent className="w-4 h-4" />
                <span>Exclusive Offers</span>
                <span class="bg-white text-orange-600 text-xs font-bold px-1.5 py-0.5 rounded-full">{activeOffers.length}</span>
              </button>
            )}
          </div>

          <!-- VEG MODE Toggle -->
          <div class="flex items-center space-x-3">
            <label class="flex items-center space-x-2 cursor-pointer">
              <input type="checkbox" id="veg-mode-toggle" class="hidden" />
              <div class="veg-mode-switch relative w-14 h-7 bg-gray-300 rounded-full transition-colors duration-300">
                <div class="veg-mode-slider absolute top-1 left-1 w-5 h-5 bg-white rounded-full transition-transform duration-300"></div>
              </div>
              <span class="font-medium text-gray-700">üå± VEG MODE</span>
            </label>
          </div>
        </div>

        <!-- VEG MODE Banner -->
        <div
          id="veg-mode-banner"
          class="hidden mt-4 rounded-lg bg-green-50 border border-green-200 px-4 py-2 text-sm text-green-800 flex items-center space-x-2"
        >
          <span>üå±</span>
          <span>
            VEG MODE is ON ‚Äî showing only vegetarian options across restaurants.
          </span>
        </div>
      </div>
    </section>

    <!-- Search Results (Menu Items) -->
    <section id="search-results-section" class="py-8 hidden">
      <div class="container-custom">
        <div class="mb-6">
          <h2 class="text-2xl font-bold mb-2">Search Results</h2>
          <p id="search-results-count" class="text-gray-600"></p>
        </div>
        <div id="search-results-grid" class="grid grid-cols-1 gap-4"></div>
      </div>
    </section>

    <!-- Exclusive Offers Section -->
    <section id="offers-section" class="py-8 hidden">
      <div class="container-custom">
        <div class="mb-6">
          <h2 class="text-2xl font-bold mb-2 flex items-center gap-2">
            <Percent className="w-6 h-6 text-orange-500" />
            Exclusive Offers
          </h2>
          <p class="text-gray-600">Limited time deals from our partner restaurants</p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {activeOffers.map((offer) => {
            const expiringSoon = isExpiringSoon(offer.endDate);
            const remainingDays = getRemainingDays(offer.endDate);
            
            return (
              <div class="offer-card bg-white rounded-xl shadow-md overflow-hidden border-2 border-orange-100 hover:border-orange-300 transition-all hover:shadow-lg" data-end-date={offer.endDate}>
                <!-- Offer Header -->
                <div class="bg-gradient-to-r from-orange-500 to-red-500 text-white p-4">
                  <div class="flex items-start justify-between">
                    <div>
                      <span class="text-xs font-medium bg-white/20 px-2 py-1 rounded-full">
                        {offer.restaurantName}
                      </span>
                      <h3 class="text-xl font-bold mt-2">{offer.dishName}</h3>
                    </div>
                    <div class="text-right">
                      <div class="bg-white text-orange-600 font-bold text-lg px-3 py-1 rounded-lg">
                        {offer.discountPercent}% OFF
                      </div>
                    </div>
                  </div>
                </div>
                
                <!-- Offer Body -->
                <div class="p-4">
                  <p class="text-gray-600 text-sm mb-4">{offer.description}</p>
                  
                  <!-- Price -->
                  <div class="flex items-center gap-3 mb-4">
                    <span class="text-gray-400 line-through text-lg">‚Çπ{offer.originalPrice}</span>
                    <span class="text-2xl font-bold text-green-600">‚Çπ{offer.offerPrice}</span>
                    {offer.vegNonVeg && (
                      <span class={`w-4 h-4 rounded border-2 flex items-center justify-center ${offer.vegNonVeg === 'Veg' ? 'border-green-600' : 'border-red-600'}`}>
                        <span class={`w-2 h-2 rounded-full ${offer.vegNonVeg === 'Veg' ? 'bg-green-600' : 'bg-red-600'}`}></span>
                      </span>
                    )}
                  </div>
                  
                  <!-- Delivery -->
                  <div class="flex items-center gap-2 text-sm text-gray-600 mb-3">
                    <Truck className="w-4 h-4" />
                    {offer.deliveryCharge === 0 ? (
                      <span class="text-green-600 font-semibold">FREE Delivery</span>
                    ) : (
                      <span>Delivery: ‚Çπ{offer.deliveryCharge}</span>
                    )}
                  </div>
                  
                  <!-- Expiry -->
                  <div class="flex items-center justify-between text-sm">
                    {expiringSoon ? (
                      <span class="text-red-600 font-semibold animate-pulse">
                        ‚è∞ Ends in {remainingDays} day{remainingDays !== 1 ? 's' : ''}!
                      </span>
                    ) : (
                      <span class="text-gray-500">
                        Valid till {new Date(offer.endDate).toLocaleDateString('en-IN', { day: 'numeric', month: 'short' })}
                      </span>
                    )}
                  </div>
                  
                  {offer.terms && (
                    <p class="text-xs text-gray-400 mt-3 pt-3 border-t border-gray-100">
                      {offer.terms}
                    </p>
                  )}
                </div>
                
                <!-- Order Button -->
                <div class="px-4 pb-4">
                  <a 
                    href={`/restaurants/${offer.restaurantId}`}
                    class="block w-full bg-gradient-to-r from-orange-500 to-red-500 hover:from-orange-600 hover:to-red-600 text-white text-center font-semibold py-3 rounded-lg transition-all"
                  >
                    Order Now
                  </a>
                </div>
              </div>
            );
          })}
        </div>
        
        {activeOffers.length === 0 && (
          <div class="text-center py-12">
            <Tag className="w-16 h-16 text-gray-300 mx-auto mb-4" />
            <h3 class="text-xl font-semibold text-gray-600 mb-2">No Active Offers</h3>
            <p class="text-gray-500">Check back soon for exclusive deals!</p>
          </div>
        )}
      </div>
    </section>

    <!-- Restaurant Grid -->
    <section id="restaurant-grid-section" class="py-8">
      <div class="container-custom">
        <div id="restaurant-count" class="text-gray-600 mb-6"></div>
        
        <div id="restaurant-grid" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
          {restaurants.map((restaurant) => {
            const isOpen = isRestaurantOpen(restaurant);
            const countdown = !isOpen ? getCountdownToOpen(restaurant) : '';
            
            // Get menu items for this restaurant
            const restaurantMenu = restaurantMenus.find((m) => m.id === restaurant.id);
            const menuItemNames = restaurantMenu?.items.map((item) => item.itemName.toLowerCase()).join(',') || '';
            const menuData = (restaurantMenu?.items || []).map((item) => ({
              name: item.itemName,
              price: item.price,
              vegNonVeg: item.vegNonVeg,
            }));
            
            return (
              <div 
                class="restaurant-card-item" 
                data-restaurant-id={restaurant.id}
                data-featured={restaurant.featured}
                data-open={isOpen}
                data-cuisine={restaurant.cuisine.join(',')}
                data-name={restaurant.name.toLowerCase()}
                data-menu-items={menuItemNames}
                data-menu-json={JSON.stringify(menuData)}
              >
                <a href={`/restaurants/${restaurant.id}`} class="block">
                  <div class="restaurant-card h-full">
                    <div class="p-6">
                      <!-- Restaurant Name & Status -->
                      <div class="flex items-start justify-between mb-3">
                        <div class="flex-1">
                          <h3 class="text-xl font-bold mb-1">{restaurant.name}</h3>
                          <p class="text-gray-600 text-sm">{restaurant.cuisine.join(' ‚Ä¢ ')}</p>
                        </div>
                        {restaurant.featured && (
                          <span class="badge bg-orange-100 text-orange-800 text-xs flex items-center space-x-1">
                            <Award className="w-3 h-3" />
                            <span>Featured</span>
                          </span>
                        )}
                      </div>

                      <!-- Cuisine Tags & Price -->
                      <div class="flex items-center justify-between mb-4">
                        <div class="flex flex-wrap gap-1">
                          {restaurant.cuisine.slice(0, 2).map((tag) => (
                            <span class="bg-orange-100 text-orange-700 text-xs font-medium px-2 py-0.5 rounded-full">
                              {tag}
                            </span>
                          ))}
                        </div>
                        <div class="flex items-center space-x-1 text-gray-500 text-sm">
                          <IndianRupee className="w-3 h-3" />
                          <span>{restaurant.costForTwo} for two</span>
                        </div>
                      </div>

                      <!-- Timing & Status -->
                      <div class="flex items-center justify-between">
                        <div class="flex items-center space-x-2 text-sm text-gray-600">
                          <Clock className="w-4 h-4" />
                          <span>{getFormattedTimings(restaurant)}</span>
                        </div>
                        {isOpen ? (
                          <span class="badge badge-success text-xs">OPEN</span>
                        ) : (
                          <span class="badge badge-danger text-xs" title={countdown}>CLOSED</span>
                        )}
                      </div>

                      {!isOpen && (
                        <p class="text-xs text-gray-500 mt-2">{countdown}</p>
                      )}

                      <!-- View Menu Button -->
                      <button class="btn-primary w-full mt-4">
                        View Menu &amp; Order
                      </button>
                    </div>
                  </div>
                </a>
              </div>
            );
          })}
        </div>

        <!-- No Results Message -->
        <div id="no-results" class="hidden text-center py-16">
          <div class="text-6xl mb-4">üîç</div>
          <h3 class="text-2xl font-bold mb-2">No restaurants found</h3>
          <p class="text-gray-600 mb-6">Try adjusting your search or filters</p>
          <button id="clear-filters" class="btn-outline">
            Clear All Filters
          </button>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>

<style>
  .tab-btn {
    background-color: rgb(243 244 246);
    color: rgb(55 65 81);
  }
  
  .tab-btn.active {
    background-color: var(--color-primary);
    color: white;
  }
</style>

<script>
  import { logger } from '../../lib/logger';

  // State
  let activeTab = 'all';
  let searchQuery = '';
  let vegMode = false;

  // Elements
  const searchInput = document.getElementById('search-input') as HTMLInputElement;
  const tabButtons = document.querySelectorAll('.tab-btn');
  const restaurantGrid = document.getElementById('restaurant-grid');
  const restaurantGridSection = document.getElementById('restaurant-grid-section');
  const restaurantCount = document.getElementById('restaurant-count');
  const noResults = document.getElementById('no-results');
  const clearFiltersBtn = document.getElementById('clear-filters');
  const vegModeToggle = document.getElementById('veg-mode-toggle') as HTMLInputElement | null;
  const searchResultsSection = document.getElementById('search-results-section');
  const searchResultsGrid = document.getElementById('search-results-grid');
  const searchResultsCount = document.getElementById('search-results-count');
  const vegModeBanner = document.getElementById('veg-mode-banner');
  const offersSection = document.getElementById('offers-section');

  // Initialize
  logger.info('Restaurants page loaded', { totalRestaurants: document.querySelectorAll('.restaurant-card-item').length }, 'RESTAURANTS');
  updateDisplay();

  // Search
  searchInput?.addEventListener('input', (e) => {
    searchQuery = (e.target as HTMLInputElement).value.toLowerCase();
    logger.debug('Search query updated', { query: searchQuery }, 'RESTAURANTS');
    updateDisplay();
  });

  // Tabs
  tabButtons.forEach((btn) => {
    btn.addEventListener('click', () => {
      tabButtons.forEach((b) => b.classList.remove('active'));
      btn.classList.add('active');
      activeTab = btn.getAttribute('data-tab') || 'all';
      logger.info('Tab changed', { tab: activeTab }, 'RESTAURANTS');
      updateDisplay();
    });
  });

  // VEG MODE toggle
  vegModeToggle?.addEventListener('change', () => {
    vegMode = !!vegModeToggle.checked;
    if (vegMode) {
      document.body.classList.add('veg-mode-active');
    } else {
      document.body.classList.remove('veg-mode-active');
    }
    if (vegModeBanner) {
      vegModeBanner.classList.toggle('hidden', !vegMode);
    }
    logger.info('Veg mode toggled', { vegMode }, 'RESTAURANTS');
    updateDisplay();
  });

  // Clear filters
  clearFiltersBtn?.addEventListener('click', () => {
    searchQuery = '';
    activeTab = 'all';
    vegMode = false;

    if (searchInput) searchInput.value = '';
    tabButtons.forEach((b) => b.classList.remove('active'));
    tabButtons[0]?.classList.add('active');
    if (vegModeToggle) {
      vegModeToggle.checked = false;
      document.body.classList.remove('veg-mode-active');
    }
    if (vegModeBanner) {
      vegModeBanner.classList.add('hidden');
    }

    logger.info('Filters cleared', {}, 'RESTAURANTS');
    updateDisplay();
  });

  function updateDisplay() {
    const cards = Array.from(document.querySelectorAll('.restaurant-card-item')) as HTMLElement[];
    const hasSearch = !!searchQuery.trim();

    if (vegModeBanner) {
      vegModeBanner.classList.toggle('hidden', !vegMode);
    }

    // Handle Offers tab
    if (activeTab === 'offers') {
      if (offersSection) offersSection.classList.remove('hidden');
      if (restaurantGridSection) restaurantGridSection.classList.add('hidden');
      if (searchResultsSection) searchResultsSection.classList.add('hidden');
      return;
    } else {
      if (offersSection) offersSection.classList.add('hidden');
    }

    if (hasSearch) {
      // Build search results across ALL restaurants & menu items
      const results: {
        restaurantId: string;
        restaurantName: string;
        items: { name: string; price: number; vegNonVeg?: string }[];
      }[] = [];

      const searchLower = searchQuery.toLowerCase();

      cards.forEach((card) => {
        const restaurantId = card.getAttribute('data-restaurant-id') || '';
        const restaurantName = card.querySelector('h3')?.textContent?.trim() || '';
        const menuJson = card.getAttribute('data-menu-json');
        if (!menuJson) return;

        let menuItems: { name: string; price: number; vegNonVeg?: string }[] = [];
        try {
          menuItems = JSON.parse(menuJson);
        } catch (e) {
          logger.error('Failed to parse menu JSON', e instanceof Error ? e : new Error(String(e)), 'RESTAURANTS');
          return;
        }

        const matchingItems = menuItems.filter((item) => {
          const matchesSearch = item.name.toLowerCase().includes(searchLower);
          const matchesVeg = !vegMode || item.vegNonVeg === 'Veg';
          return matchesSearch && matchesVeg;
        });

        if (matchingItems.length > 0) {
          results.push({
            restaurantId,
            restaurantName,
            items: matchingItems.slice(0, 4), // show top 4 items per restaurant
          });
        }
      });

      // Render search results
      if (searchResultsGrid && searchResultsSection && restaurantGridSection) {
        searchResultsGrid.innerHTML = '';

        results.forEach((result) => {
          const card = document.createElement('div');
          card.className = 'bg-white rounded-lg shadow-sm p-4 border border-gray-200';

          const itemsHtml = result.items
            .map(
              (item) => `
            <div class="flex items-center justify-between text-sm py-1">
              <div class="flex items-center space-x-2">
                <span>${item.vegNonVeg === 'Veg' ? 'üü¢' : 'üî¥'}</span>
                <span>${item.name}</span>
              </div>
              <div class="font-semibold">‚Çπ${item.price}</div>
            </div>`
            )
            .join('');

          card.innerHTML = `
            <div class="flex items-start justify-between mb-2">
              <div>
                <a href="/restaurants/${result.restaurantId}" class="font-semibold text-lg text-gray-900 hover:text-[var(--color-primary)]">${result.restaurantName}</a>
                <p class="text-xs text-gray-500">Matching items in this restaurant</p>
              </div>
              <a href="/restaurants/${result.restaurantId}" class="text-sm text-[var(--color-primary)] font-medium">View Menu ‚Üí</a>
            </div>
            <div class="divide-y divide-gray-100">
              ${itemsHtml}
            </div>
          `;

          searchResultsGrid.appendChild(card);
        });

        // Update results count
        if (searchResultsCount) {
          const itemCount = results.reduce((sum, r) => sum + r.items.length, 0);
          const restaurantCountLocal = results.length;
          searchResultsCount.textContent = `Found ${itemCount} item${itemCount !== 1 ? 's' : ''} in ${restaurantCountLocal} restaurant${restaurantCountLocal !== 1 ? 's' : ''}`;
        }

        // Toggle sections
        searchResultsSection.classList.remove('hidden');
        restaurantGridSection.classList.add('hidden');
        if (noResults) noResults.style.display = results.length === 0 ? 'block' : 'none';
      }

      logger.debug('Search results updated', { resultsCount: results.length, vegMode }, 'RESTAURANTS');
      return;
    }

    // When there is NO search query, show normal restaurant grid
    if (searchResultsSection && restaurantGridSection) {
      searchResultsSection.classList.add('hidden');
      restaurantGridSection.classList.remove('hidden');
    }

    const cardsForGrid = Array.from(document.querySelectorAll('.restaurant-card-item')) as HTMLElement[];
    let visibleCount = 0;

    cardsForGrid.forEach((card) => {
      const name = card.getAttribute('data-name') || '';
      const cuisine = card.getAttribute('data-cuisine') || '';
      const menuJson = card.getAttribute('data-menu-json') || '[]';
      const featured = card.getAttribute('data-featured') === 'true';
      const open = card.getAttribute('data-open') === 'true';

      let show = true;

      // Tab filter
      if (activeTab === 'featured' && !featured) show = false;
      if (activeTab === 'open' && !open) show = false;

      // VEG MODE: only show restaurants that have at least one veg item
      if (vegMode) {
        try {
          const items: { vegNonVeg?: string }[] = JSON.parse(menuJson);
          const hasVeg = items.some((item) => item.vegNonVeg === 'Veg');
          if (!hasVeg) show = false;
        } catch (e) {
          logger.error('Failed to parse menu JSON for veg mode', e instanceof Error ? e : new Error(String(e)), 'RESTAURANTS');
        }
      }

      // (Optional) Name/cuisine filter if we ever add back non-menu search
      if (!searchQuery && (name || cuisine)) {
        // No-op for now (we rely on tabs + veg mode only)
      }

      if (show) {
        card.style.display = 'block';
        visibleCount++;
      } else {
        card.style.display = 'none';
      }
    });

    // Update count
    if (restaurantCount) {
      restaurantCount.textContent = `Showing ${visibleCount} restaurant${visibleCount !== 1 ? 's' : ''}`;
    }

    // Show/hide no results
    if (noResults) {
      noResults.style.display = visibleCount === 0 ? 'block' : 'none';
    }
    if (restaurantGrid) {
      restaurantGrid.style.display = visibleCount === 0 ? 'none' : 'grid';
    }

    logger.debug('Grid display updated', { visibleCount, activeTab, vegMode }, 'RESTAURANTS');
  }
  
  // ============================================
  // CLIENT-SIDE OFFER EXPIRY CHECK (IST)
  // Runs on page load and every minute
  // ============================================
  function checkOfferExpiry() {
    const offerCards = document.querySelectorAll('.offer-card[data-end-date]');
    const now = new Date();
    let expiredCount = 0;
    
    offerCards.forEach((card) => {
      const endDateStr = card.getAttribute('data-end-date');
      if (!endDateStr) return;
      
      // Parse end date and set to end of day (23:59:59)
      const endDate = new Date(endDateStr);
      endDate.setHours(23, 59, 59, 999);
      
      if (now > endDate) {
        // Offer has expired - hide it with animation
        card.classList.add('opacity-0', 'scale-95', 'pointer-events-none');
        setTimeout(() => {
          (card as HTMLElement).style.display = 'none';
        }, 300);
        expiredCount++;
      }
    });
    
    // If all offers expired, hide the entire offers section
    if (expiredCount > 0) {
      const remainingOffers = document.querySelectorAll('.offer-card:not([style*="display: none"])');
      if (remainingOffers.length === 0) {
        const offersSection = document.getElementById('offers-section');
        if (offersSection) {
          offersSection.style.display = 'none';
        }
      }
    }
  }
  
  // Run on page load
  checkOfferExpiry();
  
  // Check every minute for real-time expiry
  setInterval(checkOfferExpiry, 60000);

  // ============================================
  // CLIENT-SIDE RESTAURANT OPEN/CLOSE STATUS (IST)
  // Updates status in real-time based on IST timezone
  // ============================================
  
  // Restaurant timings (same as server-side)
  const RESTAURANT_TIMINGS = {
    opensAt: '09:00',
    closesAt: '21:00'
  };

  function getISTTime() {
    const now = new Date();
    // Convert to IST (UTC+5:30)
    const istOffset = 5.5 * 60 * 60 * 1000;
    const utc = now.getTime() + (now.getTimezoneOffset() * 60 * 1000);
    const istDate = new Date(utc + istOffset);
    
    return {
      hours: istDate.getHours(),
      minutes: istDate.getMinutes()
    };
  }

  function isRestaurantOpenNow() {
    const ist = getISTTime();
    const currentTime = ist.hours * 60 + ist.minutes;
    
    const [openHour, openMin] = RESTAURANT_TIMINGS.opensAt.split(':').map(Number);
    const [closeHour, closeMin] = RESTAURANT_TIMINGS.closesAt.split(':').map(Number);
    
    const openTime = openHour * 60 + openMin;
    const closeTime = closeHour * 60 + closeMin;
    
    return currentTime >= openTime && currentTime <= closeTime;
  }

  function getCountdownToOpenClient() {
    const ist = getISTTime();
    const [openHour, openMin] = RESTAURANT_TIMINGS.opensAt.split(':').map(Number);
    
    const currentMinutes = ist.hours * 60 + ist.minutes;
    const openMinutes = openHour * 60 + openMin;
    
    let diffMinutes = openMinutes - currentMinutes;
    if (diffMinutes < 0) {
      diffMinutes += 24 * 60;
    }
    
    const hours = Math.floor(diffMinutes / 60);
    const minutes = diffMinutes % 60;
    
    return `Opens in ${hours}h ${minutes}m`;
  }

  function updateRestaurantStatus() {
    const isOpen = isRestaurantOpenNow();
    const countdown = !isOpen ? getCountdownToOpenClient() : '';
    
    // Update all restaurant cards
    const cards = document.querySelectorAll('.restaurant-card-item');
    
    cards.forEach((card) => {
      // Update data attribute for filtering
      card.setAttribute('data-open', isOpen.toString());
      
      // Find and update the status badge
      const statusBadge = card.querySelector('.badge-success, .badge-danger');
      if (statusBadge) {
        if (isOpen) {
          statusBadge.className = 'badge badge-success text-xs';
          statusBadge.textContent = 'OPEN';
          statusBadge.removeAttribute('title');
        } else {
          statusBadge.className = 'badge badge-danger text-xs';
          statusBadge.textContent = 'CLOSED';
          statusBadge.setAttribute('title', countdown);
        }
      }
      
      // Find and update the countdown text
      const countdownEl = card.querySelector('.text-xs.text-gray-500.mt-2');
      if (countdownEl) {
        if (isOpen) {
          countdownEl.remove();
        } else {
          countdownEl.textContent = countdown;
        }
      } else if (!isOpen) {
        // Add countdown if it doesn't exist
        const timingDiv = card.querySelector('.flex.items-center.justify-between:has(.badge)');
        if (timingDiv && !timingDiv.nextElementSibling?.classList.contains('text-xs')) {
          const countdownP = document.createElement('p');
          countdownP.className = 'text-xs text-gray-500 mt-2';
          countdownP.textContent = countdown;
          timingDiv.after(countdownP);
        }
      }
    });
    
    // Refresh the display to update "Open Now" tab filtering
    updateDisplay();
    
    logger.info('Restaurant status updated', { isOpen, time: getISTTime() }, 'RESTAURANTS');
  }

  // Run on page load
  updateRestaurantStatus();
  
  // Update every minute for real-time status
  setInterval(updateRestaurantStatus, 60000);
</script>
